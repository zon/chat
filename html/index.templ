package html

import (
	"github.com/zon/chat/core"
)

templ Index(user *core.User, messages []core.Message, wsUrl, alert string) {
	<body hx-boost="true">
        <div id="chat" hx-ext="ws" ws-connect={ wsUrl }>
            <div id="head">
                <div id="menu">
                    <h1>Wurbs!</h1>
                    <p><a class="button" href={ user.Url() }>{ user.Name }</a></p>
                </div>
            </div>
            <div id="messages">
                if alert != "" {
                    <div id="alert">
                        <p>{ alert }</p>
                    </div>
                }
                if len(messages) > 0 {
                    @Messages(messages)
                } else {
                    <p class="placeholder">Post a message 👍</p>
                }
            </div>
            @NewMessageForm()
        </div>
    </body>
}