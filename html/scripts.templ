package html

templ Scripts() {
    <script>
		function getMessage() {
			return document.getElementById('message')
		}

		function onMessageFocus() {
			const placeholders = getMessage().getElementsByClassName('placeholder')
			for (const placeholder of placeholders) {
				placeholder.remove()
			}
		}
        
		function getMessageValue() {
			return getMessage().innerHTML
		}
	</script>
}